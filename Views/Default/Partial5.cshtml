@using TravelTripProject.Models.Siniflar
@model List<Blog>
<div class="box1-left">
    @foreach (var x in Model)
    {
        <a href="/Blog/BlogDetay/@x.ID">
            <div class="bot-img">
                <img src="@x.BlogImage" alt="" />
            </div>
            <div class="bot-desc1">
                <p>@x.Aciklama.Substring(0, 75)...</p>
            </div>
            <div class="clear"></div>
        </a>
    }
</div>
